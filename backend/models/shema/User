const mongoose =require('mongoose');
const UserSchema = new mongoose.Schema({
    _id:{
        type: mongoose.Schema.Types.ObjectId
    },
    email: {
        type: String,
        unique: true,
        required: true
    },
    password: {
        type: String,
        required: true
        
    },
    userName:{
        type: String,
        required: true
    },
    isAdmin:{
        type: Boolean,
        default: false
    },
    phoneNumber:{
        type:String,
        required: true,
        unique: true
    },  
    photo:{
        type: String,
        default: ''
    },
    createdAt:{
        type: Date,
        default: Date.now
    }
})

module.exports = mongoose.model('User', UserSchema);